<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="net.aquadc.properties.android.sample">

    <application
        android:name="net.aquadc.propertiessampleapp.App"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="net.aquadc.propertiessampleapp.MainActivity"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="net.aquadc.propertiessampleapp.MonolithicActivity"/>

        <activity android:name="net.aquadc.propertiessampleapp.RecyclerViewActivity"/>

    </application>

</manifest>
